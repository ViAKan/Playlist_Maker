<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/standard_bottom_sheet"
    android:elevation="0dp"
    android:outlineProvider="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_shape"
    app:behavior_hideable="true"
    app:behavior_peekHeight="300dp"
    app:layout_constraintCircleRadius="16dp"
    style="@style/BottomSheetDialogTheme"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:paddingBottom="16dp"
    android:theme="@style/Theme.PlaylistMaker">

        <View
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/pip"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить в плейлист"
            android:layout_marginTop="30dp"
            android:textSize="19sp"
            android:textFontWeight="500"
            android:fontFamily="@font/ys_display_medium"
            android:textColor="@color/black"
            android:gravity="center"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNewPlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:layout_marginBottom="24dp"
            android:paddingHorizontal="14dp"
            android:layout_marginTop="28dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_clear_hist"
            android:backgroundTint="?attr/colorOnPrimary"
            android:text="@string/btn_new_playlist"
            android:textAlignment="center"
            android:textSize="14sp"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="500"
            android:textColor="?attr/colorPrimaryVariant"
            android:textAllCaps="false"
            android:visibility="visible"
            android:clickable="true"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/playlistsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>


    </LinearLayout>

